@model IPagedList<DataAccess.Models.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common
@using X.PagedList.Web.Common

@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<!-- Liên kết các thư viện cần thiết -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .badge {
        font-size: 14px;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .badge-success {
        background-color: #28a745;
        color: white;
    }

    .badge-danger {
        background-color: #dc3545;
        color: white;
    }

    /* Style cho toast */
    .toast-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1050;
    }
</style>

<!-- Toast Container -->
<div class="toast-container">
    <div id="successToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000">
        <div class="toast-header bg-success text-white">
            <strong class="mr-auto">Thông báo</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            @TempData["SuccessMessage"]
        </div>
    </div>
</div>

<!-- Tiêu đề -->
<section class="content-header">
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh sách danh mục</li>
        </ol>
    </div>
</section>

<!-- Nội dung chính -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h3 class="card-title">Danh sách danh mục</h3>
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <!-- Nút thêm danh mục -->
                        <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus"></i> Thêm danh mục
                        </a>
                    </div>

                    <div class="card-body">
                        <table class="table table-hover table-bordered text-center align-middle">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Tên</th>
                                    <th>Trạng thái</th>
                                    <th style="width:40%;">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                                        <td>
                                            @if (item.Status == true)
                                            {
                                                <span class="badge badge-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Không hoạt động</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary btn-sm">Chỉnh sửa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!-- Phân trang -->
                        <div class="d-flex justify-content-center">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                                     new PagedListRenderOptions
                            {
                                Display = PagedListDisplayMode.IfNeeded,
                                UlElementClasses = new[] { "pagination" },
                                LiElementClasses = new[] { "page-item" },
                                PageClasses = new[] { "page-link" }
                            })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Kiểm tra nếu có thông báo trong TempData thì hiển thị toast
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    $('#successToast').toast('show');
            </text>
        }
        });
    </script>
}