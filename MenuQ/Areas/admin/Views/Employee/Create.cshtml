@model DataAccess.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Danh sách nhân viên";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item active">Tạo nhân viên</li>
        </ol>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="card-title">Tạo nhân viên</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            <div class="form-group mb-3">
                                <label asp-for="AccountId" class="form-label">Chọn Tài Khoản:</label>
                                <select asp-for="AccountId" asp-items="ViewBag.AccountList" class="form-select" required>
                                    <option value="">-- Chọn tài khoản --</option>
                                </select>
                                <span asp-validation-for="AccountId" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="FullName" class="form-label">Họ và Tên:</label>
                                <input asp-for="FullName" class="form-control" required />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Position" class="form-label">Chức vụ:</label>
                                <input asp-for="Position" class="form-control" required />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="HireDate" class="form-label">Ngày tuyển dụng:</label>
                                <input asp-for="HireDate" type="date" class="form-control" required />
                                <span asp-validation-for="HireDate" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>