                        <a asp-controller="Requests" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Tất cả yêu cầu</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#forms-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-journal-text"></i><span>Hoá đơn</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="forms-nav" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                    <li>
                        <a asp-controller="Invoice" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Tất cả hoá đơn</span>
                        </a>
                    </li>
                </ul>
            </li>

            <!-- End Charts Nav -->
        </ul>
